{
  "name": "@eth-optimism/erc20-full",
  "version": "0.0.1-alpha.1",
  "description": "Example of using solc-transpiler & Web3 full node in place of solc-js and other Web3 providers for a full ERC20",
  "scripts": {
    "clean": "rimraf build",
    "build:ovm": "truffle compile --config truffle-config-ovm.js",
    "build:waffle": "mkdir -p build && waffle",   
    "build:waffle-ovm": "mkdir -p build && waffle waffle-config.json",   
    "build:truffle": "truffle compile",
    "test:truffle": "truffle test ./truffle-tests/test-erc20.js",
    "test:waffle": "mocha 'waffle-tests/*.js'",
    "test:ovm": "truffle test ./truffle-tests/test-erc20.js --config truffle-config-ovm.js",
    "all:truffle": "yarn clean && yarn build:truffle && yarn test:truffle",
    "all:waffle": "yarn clean && yarn build:waffle && yarn test:waffle",
    "all:waffle-ovm": "yarn clean && yarn build:waffle-ovm && yarn test:waffle",
    "all:ovm": "yarn clean && yarn build:ovm && yarn test:ovm"
  },
  "keywords": [
    "optimism",
    "rollup",
    "optimistic",
    "ethereum",
    "client",
    "test"
  ],
  "homepage": "https://github.com/ethereum-optimism/ovm-integration-tests/tree/master/packages/framework-examples#readme",
  "license": "MIT",
  "author": "Optimism PBC",
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereum-optimism/ovm-integration-tests.git"
  },
  "dependencies": {
    "@eth-optimism/solc-transpiler": "~0.0.1-alpha.8",
    "@eth-optimism/rollup-full-node": "^0.0.1-alpha.8",
    "ethereum-waffle": "2.1.0",
    "rimraf": "^2.6.3",
    "truffle": "^5.1.12",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "publishConfig": {
    "access": "public"
  }
}
